<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUpActivity">

    <Button
        android:id="@+id/btnMyOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My com.example.binusezyfoody.Order"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:onClick="openMyOrderActivity"
        android:fontFamily="monospace"
        android:textFontWeight="600"/>


    <EditText
        android:id="@+id/txtTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textColor="#000000"
        android:textFontWeight="600" />

    <Button
        android:id="@+id/btnTopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginHorizontal="10dp"
        android:text="Topup"
        android:fontFamily="monospace"
        android:textFontWeight="600"
        android:onClick="topUp"/>

    <TextView
        android:id="@+id/tvTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTopUp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="-99dp"
        android:fontFamily="monospace"
        android:text="Insert Balance"
        android:textColor="#000000"
        android:textFontWeight="600" />


</RelativeLayout>